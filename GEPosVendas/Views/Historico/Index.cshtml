@{
    ViewBag.Title = "Histórico de Contatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Histórico de Contatos</h2>

<form class="form-inline my-2 my-lg-0" action="@Url.Action("Pesquisar", "Historico")">
    @Html.DropDownList("idCliente", null, htmlAttributes: new { @class = "form-control" })
    @Html.DropDownList("idVendedor", null, htmlAttributes: new { @class = "form-control" })
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Ver Histórico</button>
</form>

@if (ViewBag.Historico != null)
{
    if (ViewBag.Historico.Count == 0)
    {
        <h4>Nenhum histórico informado para o Filtro</h4>
    }
    else
    {
        @Html.Partial("~/Views/Shared/_Historico.cshtml", (List<GEPV.Domain.DTO.HistoricoDTO>)ViewBag.Historico)
    }
}
else
{
    <h4>Nenhum histórico informado para o Filtro</h4>
}



@{
    ViewBag.Title = "Histórico de Contatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h4 class="text-uppercase">Histórico de Contatos</h4>
        </div>
    </div>
</div>

<form class="form-horizontal border-dark" action="@Url.Action("Pesquisar", "Historico")">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <span class="font-weight-bold">Cliente: </span> 
                <div class="col-12">
                    @Html.DropDownList("idCliente", null, htmlAttributes: new { @class = "form-control col-12" })
                </div>
                
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <span class="font-weight-bold">Vendedor: </span> 
                <div class="col-12">
                    @Html.DropDownList("idVendedor", null, htmlAttributes: new { @class = "form-control col-12" })
                </div>                
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-12 text-right">
                <button class="btn btn-outline-success" type="submit">Ver Histórico</button>
            </div>            
        </div>
    </div>  
    
</form>

<div style="margin-top: 50px;">

    @if (ViewBag.Historico != null)
    {
        if (ViewBag.Historico.Count == 0)
        {
            <h5 class="text-center text-muted">Nenhum histórico informado para o Filtro</h5>
        }
        else
        {
            @Html.Partial("~/Views/Shared/_Historico.cshtml", (List<GEPV.Domain.DTO.HistoricoDTO>)ViewBag.Historico)
        }
    }
    else
    {
        <h5 class="text-center text-muted">Nenhum histórico informado para o Filtro</h5>
    }
</div>




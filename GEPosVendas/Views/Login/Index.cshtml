@model GEPV.Domain.DTO.LoginDto


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GE Representações - Pós Venda</title>

    @*<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
        <link href="@Url.Content("~/Content/signin.css")" rel="stylesheet">*@
    @Styles.Render("~/BundleStyles/cssfiles")    
</head>
<body class="text-center">
    @using (Html.BeginForm("Login", "Login", new { returnUrl = Request["ReturnUrl"] }, FormMethod.Post, new { @class = "form-signin" }))
    {
        <h1 class="h3 mb-3 font-weight-normal"><img src="~/Content/img/LOGO GE LIMPA1.jpg" alt="GE Representações" /></h1>
        <span class="text-danger">@Html.ValidationMessageFor(x => x.Usuario)</span>
        <span class="text-danger">@Html.ValidationMessageFor(x => x.Senha)</span>
        <input type="text" id="Usuario" name="Usuario" class="form-control" placeholder="Usuário" required>
        <input type="password" id="Senha" name="Senha" class="form-control" placeholder="Senha" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
        <br />
        <p>
            <span class="mt-5 mb-3 text-muted" style="font-size: 12px;">
                versão 01.001.000
            </span>
            <br />
            <span class="mt-5 mb-3 text-muted" style="font-size: 12px;">
                &copy;Daniel Moreira Developer
            </span>
        </p>
        
    }

    @Scripts.Render("~/bundles/jsfiles")

</body>

</html>
